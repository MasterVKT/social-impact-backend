{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9100,
      "host": "localhost"
    },
    "functions": {
      "port": 5002,
      "host": "localhost"
    },
    "firestore": {
      "port": 8081,
      "host": "localhost"
    },
    "storage": {
      "port": 9200,
      "host": "localhost"
    },
    "ui": {
      "enabled": true,
      "port": 4001,
      "host": "localhost"
    },
    "singleProjectMode": true
  }
}